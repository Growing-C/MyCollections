<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/px2_size"
            android:text="输入密码"
            android:textColor="@color/tx_color_333333"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/dismissbutton" />
    </RelativeLayout>

    <com.cgy.mycollections.widgets.InputPasswordView
        android:id="@+id/password_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="none"
        app:blink="false"
        app:maxCount="6"
        app:psdType="weChat"
        app:rectAngle="@dimen/px4" />

    <Button
        android:id="@+id/confirm_btn"
        style="@style/CommonBtnStyle"
        android:layout_marginTop="@dimen/px28_margin"
        android:text="确认" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40_margin"
        android:background="#f0f0f0"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/btn_1"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="1"
            android:text="1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="2"
            android:text="2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/InputNumberStyle"
            android:tag="3"
            android:text="3" />

        <TextView
            android:id="@+id/btn_4"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="4"
            android:text="4" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="5"
            android:text="5" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/InputNumberStyle"
            android:tag="6"
            android:text="6" />

        <TextView
            android:id="@+id/btn_7"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="7"
            android:text="7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="8"
            android:text="8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/InputNumberStyle"
            android:tag="9"
            android:text="9" />

        <TextView
            android:id="@+id/empty"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:background="#dce1e7"
            android:text=" " />

        <TextView
            android:id="@+id/btn_0"
            style="@style/InputNumberStyle"
            android:layout_marginRight="@dimen/px1"
            android:tag="0"
            android:text="0" />

        <ImageView
            android:id="@+id/btn_delete"
            style="@style/InputNumberStyle"
            android:background="#dce1e7"
            android:scaleType="center"
            android:src="@drawable/selector_backspace" />

    </GridLayout>

</LinearLayout>
