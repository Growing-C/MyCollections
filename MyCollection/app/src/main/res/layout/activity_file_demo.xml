<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".functions.anim.AnimDemo">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--通过在AppTheme.Base 中设置actionOverflowMenuStyle可以设置下拉菜单的基本样式，但是设置不了文字样式-->
        <!--通过在toolbar中设置popupTheme可以设置下拉菜单的文字样式-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="文件管理" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.cgy.mycollections.functions.file.FilePathView
        android:id="@+id/file_path"
        android:layout_width="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_marginLeft="@dimen/px10_margin"
        android:layout_height="@dimen/px80_size" />
    <!--    <LinearLayout-->
    <!--        android:id="@+id/file_path"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="horizontal">-->

    <!--        <Button-->
    <!--            android:id="@+id/get_file_path"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:onClick="onClick"-->
    <!--            android:text="获取本地文件路径" />-->


    <!--    </LinearLayout>-->
    <View
        android:id="@+id/divider"
        style="@style/CommonDivider"
        android:layout_below="@id/file_path" />

    <TextView
        android:id="@+id/no_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:layout_below="@id/divider"
        android:text="没有文件" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider" />

    <LinearLayout
        android:id="@+id/operate_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px18_margin"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px18_margin"
        android:paddingRight="@dimen/px18_margin"
        android:visibility="gone">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px10_margin"
            android:onClick="onClick"
            android:layout_weight="1"
            android:text="取消" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>
</RelativeLayout>
