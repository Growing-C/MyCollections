    <!--    ImageView 有问题，设置的图片无法沉浸-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/photo_nba2"
        android:text="aaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="跳转位置设置" />

        <Button
            android:id="@+id/quit_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="清空所有模式" />

        <Button
            android:id="@+id/hide_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="隐藏状态栏" />

        <Button
            android:id="@+id/hide_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="隐藏导航栏" />

        <Button
            android:id="@+id/lean_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="向后倾斜" />

        <Button
            android:id="@+id/immerse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="沉浸模式" />

        <Button
            android:id="@+id/sticky_immerse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="粘性沉浸模式" />
    </LinearLayout>
</FrameLayout>
