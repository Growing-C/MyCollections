<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/test_window_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="测试window层级dialog" />

        <Button
            android:id="@+id/floating_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="对话框样式activity" />

        <Button
            android:id="@+id/date_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="日期选择对话框" />

        <Button
            android:id="@+id/password_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="密码对话框" />

        <com.cgy.mycollections.widgets.InputPasswordView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:inputType="none"
            android:theme="@style/TextInputLayoutTheme"
            app:maxCount="15"
            app:psdType="bottomLine"
            app:rectAngle="@dimen/dimen_10" />

        <com.cgy.mycollections.widgets.wheelview.WheelView
            android:id="@+id/wheel_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.cgy.mycollections.widgets.HintView
            android:id="@+id/hint_view"
            android:layout_width="match_parent"
            android:onClick="onClick"
            android:layout_height="70dp" />

        <com.cgy.mycollections.widgets.MProgressView
            android:id="@+id/m_progress"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/px10_margin"
            android:layout_height="@dimen/px240_size" />

        <com.cgy.mycollections.widgets.MSpinner
            android:id="@+id/m_spinner"
            android:layout_width="match_parent"
            app:downListBackground="@color/colorPrimary"
            app:text="自动切换下拉或者上拉"
            app:textColor="@android:color/white"
            app:downListTextColor="@android:color/white"
            app:downListDividerColor="@android:color/white"
            app:textSize="@dimen/px33_tx_size"
            android:background="@android:color/holo_blue_bright"
            android:layout_margin="@dimen/px24_margin"
            android:layout_height="@dimen/px80_size" />
    </LinearLayout>
</ScrollView>
