<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.anim.AnimDemo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--可翻转的社保卡-->
        <FrameLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/card_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px456"
                android:layout_marginLeft="@dimen/px4"
                android:layout_marginTop="@dimen/px24"
                android:layout_marginRight="@dimen/px4"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px24"
                android:paddingRight="@dimen/px24"
                android:visibility="invisible" />

            <View
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px456"
                android:layout_marginLeft="@dimen/px4"
                android:layout_marginTop="@dimen/px24"
                android:layout_marginRight="@dimen/px4"
                android:background="@drawable/card_wu"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px24"
                android:paddingRight="@dimen/px24" />

        </FrameLayout>
    </LinearLayout>
</ScrollView>
