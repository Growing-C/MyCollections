    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <!--    此处有个奇怪的现象 去除RelativeLayout的background
    在切换图片的时候 背景可能会变成图片的重叠，滑动时很奇怪，加了background就 没问题了-->
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/image_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </RelativeLayout>

    <!--    包一层，不然toolbar fitSystemWindows无效-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_delay_hide"
                style="@style/CommonBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_close_black_24dp"
                android:text="@string/hide" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/CommonBtnStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_delete"
                android:onClick="onClick"
                android:text="@string/delete" />

        </LinearLayout>

        <include layout="@layout/toolbar" />
    </RelativeLayout>

